<% unless @login.requested_friends.empty? %>
<% @login.requested_friends.each do |u| %>
<%= u.username %>
Since <%= u.created_at.to_s(:long) %>
<% if login_signed_in? && @login = current_login %>
<%= link_to '[Cancel]', login_friend_path(:login_id => current_login, :id => u), :method => :delete, :confirm => 'Are you sure?' %>
<% end %>
<% end %>
<% else %>
None
<% end %>

<h1> <%= @login.username %> 's Profile</h1>

<div>
<%= image_tag( @login.picture , class: 'list_image') %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th> body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post. body %></td>
        <td><%= link_to 'Show', post %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>




<%= link_to 'back', posts_path(current_login) %>

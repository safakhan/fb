<% unless @login.friends.empty? %>
<% @login.friends.each do |u| %>
<%= u.username%>
<div> 
<%= image_tag( u.picture , class: 'list_image') %>
</div>

Since <%= u.created_at.to_s(:long) %>
<% if login_signed_in? && @login = current_login %>
<%= link_to '[Remove]', login_friend_path(:login_id => current_login, :id => u), :method => :delete, :confirm => 'Are you sure?' %>
<% end %>
<% end %>
<% else %>
None
<% end %>

